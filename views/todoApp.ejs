<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>To do App</title>

   <!-- Link Google Fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Julius+Sans+One&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="/styles/todoApp.css">
  
</head>

<body>
  <section class="todo-section">
    <div class="todo-grid">
      
      <!-- Left side: Reminder form -->
      <div class="todo-left">
        <h1 class="todo-title">Reminder</h1>

          <!-- name -->
        <form class="task-form" method = "POST" action = "/data_todoApp">
          <input 
            type="text" 
            id="task" 
            name="task" 
            placeholder="Enter task" 
            required
          >

           <!-- date -->
          <input 
            type="date" 
            id="taskDate" 
            name="taskDate" 
            required
          >

          <!-- description -->
          <textarea 
            id="taskField" 
            name="taskField" 
            placeholder="Enter task details" 
            rows="4"
          ></textarea>

          <!-- Submit button -->
          <button type="submit" class="task-submit">Submit</button>
        </form>
      </div>

      <!-- Right side: Card with info -->
      <div class="todo-right">
        <ul>
        <% for( const task of storedTasks) { %>
        <%- include('card.ejs', { task: task }) %>
        <% } %>
        </ul>
    </div>
  </section>
</body>

</html>